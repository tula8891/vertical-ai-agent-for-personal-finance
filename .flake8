[flake8]
# Maximum line length
max-line-length = 130

# Exclude patterns
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.pyc,
    *.egg-info,
    .eggs,
    .tox,
    .venv,
    venv,
    .env,
    venv/*,
    */venv/*

# Essential errors only
select = E,F,W,B,B950
ignore = E203,W503,E402,E501,F401,W605,B006

# Per-file-ignores
per-file-ignores =
    tests/*: F841,B006,B010
    util/test_*.py: F841
    __init__.py: F401,F403
